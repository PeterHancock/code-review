{
  "rules": {
    "users": {
      "$userId" : {
        "projects": {
          "$project": {
            "data": {
              ".read": "$userId == auth.id || root.child('users/' + $userId + '/projects/' + $project + '/users/' + auth.id + '/read').exists()",
              ".write": "$userId == auth.id || root.child('users/' + $userId + '/projects/' + $project + '/users/' + auth.id + '/write').exists()"
            },
            "users": {
              ".read": "$userId == auth.id",
              ".write": "$userId == auth.id"
            }
          }
        },
        "messages":{
          ".read": "$userId == auth.id",
          "$message": {
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['id', 'message', 'email'])",
            "id": {
              ".validate": "newData.isString() && newData.val() == auth.id"
            },
            "email": {
              ".validate": "newData.isString() && newData.val() == auth.email"
            },
            "message": {
              ".validate": "newData.isString()"
            },
            "$others": {
              ".validate": "$others == null"
            }
          }
        }
      }
    }
  }
}